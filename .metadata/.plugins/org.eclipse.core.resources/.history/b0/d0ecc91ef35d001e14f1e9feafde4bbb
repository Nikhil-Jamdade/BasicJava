package test;

public class ForLoopExample {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
//*********************************************//
		for (int a = 1; a <= 10; a++) {
			System.out.print(a);
		}
		System.out.println("");
//*********************************************//
		for (int a = 10; a > 0; a--) {
			System.out.print(a);
		}
		System.out.println("");
//*********************************************//
		for (int a = 10; a > 0; a-=2) {
			System.out.print(a);
		}
		System.out.println("");
//*********************************************//
		for (int a = 10; a > 0; a-=3) {
			System.out.print(a);
		}
		System.out.println("");
//*********************************************//
		
		
//*********************************************//
	}

}
